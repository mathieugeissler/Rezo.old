<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Welcome!{% endblock %}</title>

    {% block stylesheets %}
        {% stylesheets
        '@CoreBundle/Resources/public/css/bootstrap.min.css'
        '@CoreBundle/Resources/public/css/material.min.css'
        '@CoreBundle/Resources/public/css/ripples.min.css'
        '@CoreBundle/Resources/public/css/roboto.min.css'
        '@CoreBundle/Resources/public/css/core.css'
        filter='cssrewrite' output='css/compiled/app.css' %}
        <link rel="stylesheet" href="{{ asset_url }}"/>
        {% endstylesheets %}
    {% endblock %}

</head>
<body>
<body>
<!-- Navigation -->
<div class="navbar navbar-default navbar-fixed-top">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="{{ path('core_homepage') }}">Rezo</a>
    </div>
    <div class="navbar-collapse collapse navbar-responsive-collapse">
        <ul class="nav navbar-nav">
            <li><a href="{{ path('blog_homepage') }}">Blog</a></li>
        </ul>
        <form class="navbar-form navbar-left">
            <input type="text" class="form-control col-lg-8" placeholder="Search">
        </form>
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a href="user/login">Login</a>
            </li>
        </ul>
    </div>
</div>

{% block flash %}
    {% for message in app.session.flashbag.get('info') %}
        <p>Message : {{ message }}</p>
    {% endfor %}
{% endblock %}

{% block body %}{% endblock %}

{% block javascripts %}
    {% javascripts
    '@CoreBundle/Resources/public/js/jquery.min.js'
    '@CoreBundle/Resources/public/js/bootstrap.min.js'
    '@CoreBundle/Resources/public/js/material.min.js'
    '@CoreBundle/Resources/public/js/ripples.min.js'
    '@CoreBundle/Resources/public/js/core.js'
    output='js/compiled/app.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
</body>
</html>