<table class="table table-striped" id="dataTable">
    <thead>
    <tr>
        <td>#</td>
        <td>Title</td>
        <td>Author</td>
        <td>Status</td>
        <td>Action</td>
    </tr>
    </thead>
    <tbody>
    {% for post in posts %}
        <tr>
            <td>{{ post.id }}</td>
            <td>{{ post.title }}</td>
            <td>{{ post.author.username }}</td>
            <td>Status</td>
            <td>
                <button id="{{ post.id }}" type="button" class="btn btn-info btn-xs editButton" data-toggle="tooltip"
                        data-placement="top" title="Edit">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
                <button tid="delButton" ype="button" class="btn btn-danger btn-xs" data-toggle="tooltip"
                        data-placement="top" title="Delete">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </button>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
